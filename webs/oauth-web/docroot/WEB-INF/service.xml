<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder package-path="com.liferay.portal.oauth" auto-namespace-tables="false">
	<namespace>OAuth</namespace>
	<entity name="OAuthApplication" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="id" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="ownerId" type="long" />
		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="website" type="String" />
		<column name="secret" type="String" />
		<column name="callBackURL" type="String" />
		
		<!-- Finder methods -->

		<finder name="name" return-type="Collection">
			<finder-column name="name" />
		</finder>
		<finder name="ownerId" return-type="long" unique="true">
			<finder-column name="ownerId" />
		</finder>
		<finder name="website" return-type="Collection">
			<finder-column name="website" />
		</finder>
	</entity>
</service-builder>
